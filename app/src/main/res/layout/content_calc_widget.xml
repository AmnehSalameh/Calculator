<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/white_"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.amoon.calculator.calc_widget"
    tools:showIn="@layout/activity_calc_widget">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="8"
        android:columnCount="5"
        android:orientation="horizontal"

        android:layout_below="@+id/txt">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="C"
            android:id="@+id/C"
            android:layout_row="1"
            android:layout_column="1"
            android:background="#cccccc"
            android:layout_below="@+id/txt"
            android:layout_alignParentStart="true"
            android:textStyle="bold"
            android:textSize="25dp"
            android:layout_margin="3dp"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="MC"
            android:id="@+id/MC"
            android:layout_row="1"
            android:layout_column="2"
            android:background="#cccccc"
            android:layout_below="@+id/txt"
            android:layout_toEndOf="@+id/C"
            android:textStyle="bold"
            android:textSize="25dp"
            android:layout_margin="3dp"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="MR"
            android:id="@+id/MR"
            android:layout_row="1"
            android:layout_column="3"
            android:background="#cccccc"
            android:layout_below="@+id/txt"
            android:layout_toEndOf="@+id/MC"
            android:textStyle="bold"
            android:textSize="25dp"
            android:layout_margin="3dp"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="M+"
            android:id="@+id/savetoMem"
            android:layout_row="1"
            android:layout_column="4"
            android:background="#cccccc"
            android:layout_below="@+id/txt"
            android:layout_alignParentEnd="true"
            android:textStyle="bold"
            android:textSize="25dp"
            android:layout_margin="3dp"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="163dp"
            android:layout_height="50dp"
            android:text="Back"
            android:id="@+id/BACK"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnSpan="2"
            android:background="#cccccc"
            android:textStyle="bold"
            android:textSize="25dp"
            android:layout_margin="3dp"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="N"
            android:id="@+id/N"
            android:layout_row="2"
            android:layout_column="3"
            android:background="#cccccc"
            android:textStyle="bold"
            android:layout_margin="3dp"
            android:textSize="25dp"
            />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="รท"
            android:id="@+id/div"
            android:layout_row="2"
            android:layout_column="4"
            android:background="#cccccc"
            android:textStyle="bold"
            android:textSize="25dp"
            android:layout_margin="3dp"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:text="7"
            android:id="@+id/seven"
            android:layout_row="3"
            android:layout_column="1"
            android:textSize="25dp"
            android:layout_margin="3dp"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:text="8"
            android:id="@+id/eight"
            android:layout_row="3"
            android:layout_column="2"
            android:textSize="25dp"
            android:layout_margin="3dp"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:text="9"
            android:id="@+id/nine"
            android:layout_row="3"
            android:layout_column="3"
            android:textSize="25dp"
            android:layout_margin="3dp"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="x"
            android:id="@+id/mult"
            android:layout_row="3"
            android:layout_column="4"
            android:background="#cccccc"
            android:textStyle="bold"
            android:textSize="25dp"
            android:layout_margin="3dp"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:text="4"
            android:id="@+id/four"
            android:layout_row="4"
            android:layout_column="1"
            android:textSize="25dp"
            android:layout_margin="3dp"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:text="5"
            android:id="@+id/five"
            android:layout_row="4"
            android:layout_column="2"
            android:textSize="25dp"
            android:layout_margin="3dp"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:text="6"
            android:id="@+id/six"
            android:layout_row="4"
            android:layout_column="3"
            android:textSize="25dp"
            android:layout_margin="3dp"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="-"
            android:id="@+id/min"
            android:layout_row="4"
            android:layout_column="4"
            android:background="#cccccc"
            android:textStyle="bold"
            android:textSize="25dp"
            android:layout_margin="3dp"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:text="1"
            android:id="@+id/one"
            android:layout_row="5"
            android:layout_column="1"
            android:textSize="25dp"
            android:layout_margin="3dp"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:text="2"
            android:id="@+id/two"
            android:layout_row="5"
            android:layout_column="2"
            android:textSize="25dp"
            android:layout_margin="3dp"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:text="3"
            android:id="@+id/three"
            android:layout_row="5"
            android:layout_column="3"
            android:textSize="25dp"
            android:layout_margin="3dp"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="+"
            android:id="@+id/plus"
            android:layout_row="5"
            android:layout_column="4"
            android:background="#cccccc"
            android:textStyle="bold"
            android:textSize="25dp"
            android:layout_margin="3dp"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="248dp"
            android:layout_height="65dp"
            android:text="0"
            android:id="@+id/zero"
            android:layout_row="6"
            android:layout_column="1"
            android:layout_columnSpan="3"
            android:textSize="25dp"
            android:layout_margin="3dp"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="="
            android:id="@+id/equal"
            android:layout_row="6"
            android:layout_column="4"
            android:background="#a39f9f"
            android:textStyle="bold"
            android:textSize="25dp"
            android:layout_margin="3dp"/>

    </GridLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/txt"
        android:textSize="70dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
